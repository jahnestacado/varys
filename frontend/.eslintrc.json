{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "React": true,
        "fetch": true,
        "Headers": true,
        "document": true,
        "window": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 2,
        "no-unused-vars": [1],
        "spaced-comment": [2, "always"],
        "arrow-parens": [2, "always"],
        "prefer-arrow-callback":  1,
        "prefer-spread": 2,
        "prefer-template":2,
        "prefer-rest-params":2,
        "no-octal":2,
        "no-console":0,
        "no-multi-str":2,
        "prefer-const": 1,
        "no-var": 1,
        "no-const-assign": 2,
        "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
        "arrow-spacing" : [2, {
            "before": true,
            "after": true
            }],
        "comma-dangle": ["error", {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "functions": "always-multiline"
            }]
        }
}
